<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <title>Fullscreen Test</title>
    <style>
        body {
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            overflow: hidden;
            background-color: #000;
        }

        #imageContainer {
            width: 100%;
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            position: relative;
        }

        #testImage {
            max-width: 100%;
            max-height: 100%;
            object-fit: contain;
        }

        #fullscreenButton {
            position: absolute;
            bottom: 20px;
            left: 50%;
            transform: translateX(-50%);
            padding: 10px 20px;
            background-color: rgba(255, 255, 255, 0.8);
            border: none;
            font-size: 18px;
            color: #000;
            cursor: pointer;
            border-radius: 5px;
        }
    </style>
</head>
<body>

    <div id="imageContainer">
        <img id="https://lh3.googleusercontent.com/ci/AL18g_TeiDsHcn0dI7NQYtKBzPStFbYb-Vl_W_XRhNbCba9ksInHQ5gth1EuRP_-hu9TpjCumnDt9cg=s1200" alt="Test Image">
        <button id="fullscreenButton">Go Fullscreen</button>
    </div>

    <script>
        var imageContainer = document.getElementById('imageContainer');
        var fullscreenButton = document.getElementById('fullscreenButton');

        function enterFullscreen() {
            // Ensure fullscreen request is user-initiated
            if (imageContainer.requestFullscreen) {
                imageContainer.requestFullscreen();
            } else if (imageContainer.mozRequestFullScreen) { // Firefox
                imageContainer.mozRequestFullScreen();
            } else if (imageContainer.webkitRequestFullscreen) { // Safari/Chrome
                imageContainer.webkitRequestFullscreen();
            } else if (imageContainer.msRequestFullscreen) { // IE/Edge
                imageContainer.msRequestFullscreen();
            }
        }

        fullscreenButton.addEventListener('click', function() {
            enterFullscreen();
        });

        // Add 'touchstart' for mobile support (especially iOS)
        fullscreenButton.addEventListener('touchstart', function() {
            enterFullscreen();
        });
    </script>

</body>
</html>
